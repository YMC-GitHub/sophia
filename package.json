{
  "name": "@yors/sophia",
  "version": "0.1.0",
  "description": "a project name sophia",
  "keywords": [
    "AutoHotkey",
    "RobotJS",
    "AutoIt",
    "Automation"
  ],
  "author": "yemiancheng <ymc.github@gmail.com> (https://github.com/ymc-github)",
  "license": "MIT",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "prepublishOnly": "napi prepublish -t npm",
    "artifacts": "napi artifacts",
    "build": "napi build --platform",
    "build:release": "napi build --release --platform",
    "test": "ava",
    "version": "napi version",
    "format": "run-p format:prettier format:rs format:toml",
    "format:prettier": "prettier . -w",
    "format:toml": "taplo format",
    "format:rs": "cargo fmt",
    "lint": "eslint . -c ./.eslintrc.yml",
    "bench": "node -r @swc-node/register benchmark/bench.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ymc-github/sophia.git"
  },
  "bugs": {
    "url": "https://github.com/ymc-github/sophia/issues"
  },
  "homepage": "https://github.com/ymc-github/sophia/blob/main/#readme",
  "devDependencies": {
    "@napi-rs/cli": "^2.16.4",
    "@swc-node/register": "^1.6.8",
    "@swc/core": "^1.3.95",
    "@taplo/cli": "^0.7.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "ava": "^6.0.0",
    "benny": "^3.7.1",
    "chalk": "^5.3.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.2",
    "npm-run-all2": "^6.0.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "watch": {
    "build-rs": {
      "patterns": [
        "src"
      ],
      "extensions": "rs",
      "quiet": true
    },
    "run-ts": {
      "patterns": [
        "example",
        "*.node"
      ],
      "extensions": "ts",
      "quiet": true
    }
  },
  "engines": {
    "node": ">= 10"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "napi": {
    "name": "sophia",
    "triples": {
      "defaults": false,
      "additional": [
        "x86_64-pc-windows-msvc"
      ]
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "ava": {
    "require": [
      "@swc-node/register"
    ],
    "extensions": [
      "ts"
    ],
    "timeout": "2m",
    "workerThreads": false,
    "environmentVariables": {
      "TS_NODE_PROJECT": "./tsconfig.json"
    }
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "eslint -c .eslintrc.yml --fix"
    ],
    "*.@(js|ts|tsx|yml|yaml|md|json)": [
      "prettier --write"
    ],
    "*.toml": [
      "taplo format"
    ]
  }
}
